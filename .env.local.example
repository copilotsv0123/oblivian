# JWT Secret for authentication (required)
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google OAuth Configuration
# Enable/disable Google SSO authentication
GOOGLE_AUTH_ENABLED=true
# Get these from Google Cloud Console OAuth 2.0 credentials
GOOGLE_CLIENT_ID=your-google-client-id-from-cloud-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-cloud-console
# Redirect URI (auto-generated if not set)
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Authentication Session Configuration
# Session secret (minimum 32 characters) - generate with: openssl rand -base64 48
AUTH_SESSION_SECRET=your-super-secure-session-secret-at-least-32-characters-long
# Session duration in seconds (default: 86400 = 24 hours)
AUTH_SESSION_DURATION=86400

# App Configuration
# Base URL for the application (used for redirect URI generation)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI Provider API Keys (optional - for card generation)
GEMINI_API_KEY=your-gemini-api-key
# Optional: override default Gemini model (defaults to gemini-1.5-flash)
GEMINI_MODEL=gemini-1.5-flash

# Embedding provider configuration (optional)
# Only Gemini embeddings are supported
EMBEDDING_PROVIDER=gemini
GEMINI_EMBEDDING_MODEL=text-embedding-004

# Database
DATABASE_URL=file:./oblivian.db